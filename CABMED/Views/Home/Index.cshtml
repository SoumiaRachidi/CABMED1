@{
    ViewBag.Title = "MEDX - Cabinet Médical Nouvelle Génération";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.FullWidth = true;
    ViewBag.HideNavbar = false;
}

<style>
    /* Modern Medical Landing Page */
    :root {
        --primary-blue: #2D3E6E;
        --accent-orange: #FF6B4A;
  --light-orange: #FFB4A0;
        --soft-blue: #E8F0FF;
        --light-gray: #F5F7FA;
 --dark-text: #2C2C54;
      --light-text: #6C757D;
    }

    /* Reset any inherited styles */
    * {
        box-sizing: border-box;
    }

    body {
        background: white;
   font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--dark-text);
        overflow-x: hidden;
margin: 0;
        padding: 0;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, var(--soft-blue) 0%, #ffffff 100%);
        padding: 80px 0 60px 0;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(255, 107, 74, 0.1) 0%, transparent 70%);
        border-radius: 50%;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero-title {
        font-size: 42px;
        font-weight: 700;
        color: var(--dark-text);
        margin-bottom: 20px;
        line-height: 1.3;
    }

    .hero-subtitle {
        font-size: 28px;
        color: var(--accent-orange);
        font-weight: 600;
        margin-bottom: 30px;
    }

    .hero-text {
        font-size: 18px;
        color: var(--light-text);
        margin-bottom: 35px;
        line-height: 1.6;
    }

    .btn-hero {
        background: var(--accent-orange);
        color: white;
        border: none;
        padding: 16px 40px;
        border-radius: 30px;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(255, 107, 74, 0.3);
    }

    .btn-hero:hover {
        background: #e55a3a;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 6px 30px rgba(255, 107, 74, 0.4);
    }

    .hero-illustration {
        text-align: center;
        position: relative;
    }

    .hero-illustration img {
        max-width: 100%;
        height: auto;
        filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.1));
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    /* Auth Cards Section */
    .auth-cards-section {
        background: var(--primary-blue);
        padding: 50px 0;
        margin-top: -30px;
        position: relative;
        z-index: 3;
    }

    .auth-card {
        background: white;
        border-radius: 20px;
        padding: 40px 30px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        margin-bottom: 30px;
    }

    .auth-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
    }

    .auth-card h3 {
        font-size: 18px;
        color: var(--dark-text);
        margin-bottom: 15px;
        font-weight: 600;
    }

    .auth-card p {
        font-size: 14px;
        color: var(--accent-orange);
        margin-bottom: 20px;
        font-weight: 500;
    }

    .auth-card .btn {
        background: var(--primary-blue);
        color: white;
        border: none;
        padding: 12px 35px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .auth-card .btn:hover {
        background: #1e2a4a;
        transform: scale(1.05);
    }

    .auth-card-avatar {
        width: 120px;
        height: 120px;
        margin: 0 auto 20px;
        background: linear-gradient(135deg, var(--soft-blue) 0%, #D8E5FF 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 50px;
        color: var(--primary-blue);
    }

    /* Services Pills */
    .services-pills {
        background: var(--primary-blue);
        color: white;
        padding: 20px 0;
        text-align: center;
    }

    .services-pills p {
        margin: 0;
        font-size: 14px;
        font-weight: 500;
    }

    /* Discover Section */
    .discover-section {
        padding: 80px 0;
        background: white;
    }

    .section-title {
        text-align: center;
        margin-bottom: 60px;
    }

    .section-title h2 {
        font-size: 36px;
        color: var(--dark-text);
        margin-bottom: 10px;
    }

    .section-title h2 span {
        color: var(--accent-orange);
    }

    .section-title p {
        font-size: 18px;
        color: var(--light-text);
    }

    /* Feature Cards */
    .feature-card {
        margin-bottom: 60px;
        display: flex;
        align-items: center;
        gap: 40px;
    }

    .feature-card.reverse {
        flex-direction: row-reverse;
    }

    .feature-illustration {
        flex: 1;
        text-align: center;
    }

    .feature-illustration img {
        max-width: 100%;
        height: auto;
        filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.05));
    }

    .feature-content {
        flex: 1;
    }

    .feature-badge {
        background: var(--soft-blue);
        color: var(--primary-blue);
        padding: 8px 20px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
        margin-bottom: 15px;
        text-transform: uppercase;
    }

    .feature-title {
        font-size: 28px;
        color: var(--dark-text);
        margin-bottom: 20px;
        font-weight: 700;
    }

    .feature-description {
        font-size: 16px;
        color: var(--light-text);
        line-height: 1.8;
        margin-bottom: 25px;
    }

    .btn-feature {
        background: var(--accent-orange);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

    .btn-feature:hover {
        background: #e55a3a;
        color: white;
        transform: translateX(5px);
    }

    /* Career Section */
    .career-section {
        background: linear-gradient(135deg, var(--soft-blue) 0%, #ffffff 100%);
        padding: 80px 0;
        text-align: center;
    }

    .career-section h2 {
        font-size: 32px;
        color: var(--dark-text);
        margin-bottom: 20px;
    }

    .career-section h2 span {
        color: var(--accent-orange);
    }

    .career-section p {
        font-size: 18px;
        color: var(--light-text);
        margin-bottom: 30px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .career-section .btn-hero {
        margin-top: 20px;
    }

    .career-illustration {
        margin-top: 40px;
    }

    .career-illustration img {
        max-width: 100%;
        height: auto;
        filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.1));
    }

    /* FAQ Section */
    .faq-section {
        padding: 80px 0;
        background: white;
    }

    .faq-section h2 {
        font-size: 32px;
        color: var(--dark-text);
        margin-bottom: 40px;
    }

    .faq-item {
        border: 2px solid #E8ECF1;
        border-radius: 12px;
        margin-bottom: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .faq-item:hover {
        border-color: var(--accent-orange);
    }

    .faq-question {
        padding: 20px 25px;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: white;
        transition: all 0.3s ease;
    }

    .faq-question:hover {
        background: var(--light-gray);
    }

    .faq-question h4 {
        margin: 0;
        font-size: 16px;
        color: var(--dark-text);
        font-weight: 600;
    }

    .faq-icon {
        color: var(--accent-orange);
        font-size: 20px;
        transition: transform 0.3s ease;
    }

    .faq-item.active .faq-icon {
        transform: rotate(180deg);
    }

    .faq-answer {
        padding: 0 25px;
        max-height: 0;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .faq-item.active .faq-answer {
        max-height: 500px;
        padding: 20px 25px;
    }

    .faq-answer p {
        margin: 0;
        color: var(--light-text);
        line-height: 1.6;
    }

    .btn-all-faqs {
        background: white;
        color: var(--primary-blue);
        border: 2px solid var(--primary-blue);
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        margin-top: 30px;
        transition: all 0.3s ease;
    }

    .btn-all-faqs:hover {
        background: var(--primary-blue);
        color: white;
    }

    /* Placeholder for illustrations */
    .illustration-placeholder {
        width: 100%;
        max-width: 400px;
        height: 300px;
        background: linear-gradient(135deg, var(--soft-blue) 0%, #D8E5FF 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-blue);
        font-size: 80px;
        margin: 0 auto;
    }

    /* Footer Attribution */
    .footer-attribution {
        background: var(--light-gray);
        padding: 40px 0;
        text-align: center;
        border-top: 1px solid #E8ECF1;
    }

    .footer-attribution p {
        margin: 0;
        color: var(--light-text);
        font-size: 14px;
    }

    .footer-attribution a {
        color: var(--accent-orange);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .footer-attribution a:hover {
        color: var(--primary-blue);
        text-decoration: underline;
    }

    .footer-links {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        gap: 30px;
        flex-wrap: wrap;
    }

    .footer-links a {
        color: var(--light-text);
        text-decoration: none;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .footer-links a:hover {
        color: var(--accent-orange);
    }

    @@media (max-width: 992px) {
        .feature-card,
        .feature-card.reverse {
            flex-direction: column;
        }

        .hero-title {
            font-size: 32px;
        }

        .hero-subtitle {
            font-size: 22px;
        }
    }

    @@media (max-width: 768px) {
        .hero-section {
            padding: 50px 0 40px 0;
        }

        .section-title h2 {
            font-size: 28px;
        }

        .feature-title {
            font-size: 24px;
        }

        .footer-links {
            flex-direction: column;
            gap: 15px;
        }
    }
</style>

