@model CABMED.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Inscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="max-width: 720px; margin-top: 40px;">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title text-center">
                <span class="glyphicon glyphicon-user"></span> Créer un compte
            </h3>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Nom)
                            @Html.TextBoxFor(m => m.Nom, new { @class = "form-control", placeholder = "Nom" })
                            @Html.ValidationMessageFor(m => m.Nom, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Prenom)
                            @Html.TextBoxFor(m => m.Prenom, new { @class = "form-control", placeholder = "Prénom" })
                            @Html.ValidationMessageFor(m => m.Prenom, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-envelope"></span>
                        </span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "exemple@email.com", autocomplete = "email" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Telephone)
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-phone"></span>
                        </span>
                        @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control", placeholder = "0612345678", autocomplete = "tel" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Telephone, "", new { @class = "text-danger" })
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mot de passe", autocomplete = "new-password" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword)
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmer", autocomplete = "new-password" })
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DateNaissance)
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        @Html.TextBoxFor(m => m.DateNaissance, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                    @Html.ValidationMessageFor(m => m.DateNaissance, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.AntecedentsMedicaux)
                    @Html.TextAreaFor(m => m.AntecedentsMedicaux, 4, 20, new { @class = "form-control", placeholder = "Décrivez vos antécédents médicaux (optionnel)" })
                    @Html.ValidationMessageFor(m => m.AntecedentsMedicaux, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Role)
                    <select id="Role" name="Role" class="form-control">
                        <option value="patient" @(Model.Role == "patient" ? "selected" : "")>Patient</option>
                        <option value="admin" @(Model.Role == "admin" ? "selected" : "")>Administrateur</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-success btn-block btn-lg">
                    <span class="glyphicon glyphicon-check"></span> Créer le compte
                </button>
            }

            <hr />

            <div class="text-center">
                <p>Déjà inscrit ?</p>
                <a href="@Url.Action("Login", "Auth")" class="btn btn-primary">
                    <span class="glyphicon glyphicon-log-in"></span> Se connecter
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
