        border-color: var(--primary-purple);
        box-shadow: 0 8px 25px rgba(113, 50, 202, 0.2);
    }

    .action-tile .glyphicon {
        font-size: 32px;
        display: block;
        margin-bottom: 12px;
        position: relative;
        z-index: 1;
        transition: all 0.3s ease;
    }

    .action-tile:hover .glyphicon {
        transform: scale(1.1);
    }

    .action-tile.primary .glyphicon { color: var(--primary-purple); }
    .action-tile.danger .glyphicon { color: var(--pink-accent); }
    .action-tile.info .glyphicon { color: var(--light-purple); }
    .action-tile.warning .glyphicon { color: #301CA0; }

    .action-tile span:last-child {
        font-size: 14px;
        font-weight: 600;
        color: var(--dark-text);
        position: relative;
        z-index: 1;
    }

    /* Health Info Card */
    .health-info-card {
        background: var(--gradient-primary);
        border-radius: 18px;
        padding: 32px;
        color: white;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

    .health-info-card::before {
        content: '';
        position: absolute;
        top: -50px;
        right: -50px;
        width: 220px;
        height: 220px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .health-info-card::after {
        content: '';
        position: absolute;
        bottom: -60px;
        left: -40px;
        width: 180px;
        height: 180px;
        background: rgba(196, 123, 228, 0.2);
        border-radius: 50%;
    }

    .health-info-card h3 {
        margin: 0 0 16px 0;
        font-size: 21px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 12px;
        position: relative;
        z-index: 1;
    }

    .health-info-card p {
        margin-bottom: 22px;
        opacity: 0.95;
        line-height: 1.7;
        position: relative;
        z-index: 1;
    }

    .health-details {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
        position: relative;
        z-index: 1;
    }

    .health-detail {
