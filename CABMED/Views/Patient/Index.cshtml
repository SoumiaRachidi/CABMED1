    }

    .health-detail strong {
        display: block;
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        margin-bottom: 6px;
        opacity: 0.9;
    }

    .health-detail-value {
        font-size: 16px;
        font-weight: 600;
    }

    /* Activity Section */
    .activity-section {
        background: white;
        border-radius: 18px;
        padding: 32px;
        box-shadow: var(--card-shadow);
        margin-top: 28px;
        border: 1px solid rgba(113, 50, 202, 0.08);
    }

    .activity-item {
        background: linear-gradient(135deg, #F7F8FC 0%, #F0F1F7 100%);
        border-left: 4px solid var(--primary-purple);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 14px;
        transition: all 0.3s ease;
    }

    .activity-item:hover {
        transform: translateX(8px);
        box-shadow: 0 4px 18px rgba(113, 50, 202, 0.15);
        border-left-color: var(--light-purple);
    }

    .activity-item h5 {
        margin: 0 0 6px 0;
        font-size: 15px;
        font-weight: 600;
        color: var(--dark-text);
    }

    .activity-item p {
        margin: 0 0 10px 0;
        color: var(--light-text);
        font-size: 14px;
    }

    .activity-date {
        font-size: 12px;
        color: var(--light-text);
        font-weight: 500;
    }

    .empty-state {
        text-align: center;
        padding: 65px 20px;
    }

    .empty-state .glyphicon {
        font-size: 68px;
        color: rgba(113, 50, 202, 0.15);
        margin-bottom: 22px;
    }

    .empty-state h4 {
        color: var(--light-text);
        font-weight: 600;
        margin-bottom: 12px;
    }

    .empty-state p {
        color: #B8B8CC;
        margin-bottom: 28px;
    }

    .empty-state .btn-primary {
        background: var(--gradient-primary);
        border: none;
        color: white;
        padding: 14px 28px;
        border-radius: 12px;
        font-weight: 600;
    }

    /* Health Tips */
    .health-tips {
        background: white;
        border-radius: 18px;
        padding: 32px;
        box-shadow: var(--card-shadow);
        margin-top: 28px;
        border: 1px solid rgba(113, 50, 202, 0.08);
    }

    .tips-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 22px;
    }

    .tip-card {
        text-align: center;
        padding: 28px 18px;
        background: linear-gradient(135deg, #F7F8FC 0%, #F0F1F7 100%);
        border-radius: 14px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .tip-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 25px rgba(113, 50, 202, 0.15);
        border-color: var(--primary-purple);
    }

    .tip-icon {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 16px;
        font-size: 26px;
        color: white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.12);
    }

    .tip-icon.purple { background: var(--gradient-primary); }
    .tip-icon.pink { background: var(--gradient-light); }
    .tip-icon.dark { background: var(--gradient-dark); }

    .tip-card h5 {
        font-size: 16px;
        font-weight: 700;
        color: var(--dark-text);
        margin-bottom: 12px;
    }

    .tip-card p {
        font-size: 13px;
        color: var(--light-text);
        line-height: 1.7;
        margin: 0;
    }

    @@media (max-width: 992px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .stats-section {
            grid-template-columns: 1fr;
        }
        
        .tiles-grid {
            grid-template-columns: 1fr;
        }

        .health-details {
            grid-template-columns: 1fr;
        }

        .welcome-header {
            padding: 35px 25px;
        }

        .quick-actions {
            flex-direction: column;
        }

        .quick-actions .btn {
            width: 100%;
        }
    }
</style>

<div class="patient-dashboard">
    
    <!-- Welcome Header - Purple Gradient -->
    <div class="welcome-header">
        <h1>Bienvenue, @ViewBag.UserName</h1>
        <p>Gérez vos rendez-vous médicaux et suivez votre parcours de santé</p>
        
        <div class="quick-actions">
            <a href="@Url.Action("BookAppointment", "Patient")" class="btn btn-primary">
                <span class="glyphicon glyphicon-calendar"></span> Prendre rendez-vous
            </a>
            <a href="@Url.Action("MyAppointments", "Patient")" class="btn btn-info">
                <span class="glyphicon glyphicon-list-alt"></span> Mes rendez-vous
            </a>
            <a href="@Url.Action("MyPrescriptions", "Patient")" class="btn btn-success">
                <span class="glyphicon glyphicon-file"></span> Mes ordonnances
            </a>
            <a href="@Url.Action("Logout", "Auth")" class="btn btn-default">
                <span class="glyphicon glyphicon-log-out"></span> Déconnexion
            </a>
        </div>
    </div>

    <!-- Stats Cards - Purple Theme -->
    <div class="stats-section">
        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-icon purple">
                    <span class="glyphicon glyphicon-calendar"></span>
                </div>
                <div class="stat-info">
                    <div class="stat-value">@(ViewBag.UpcomingAppointments ?? 0)</div>
                    <div class="stat-label">Prochains rendez-vous</div>
                </div>
            </div>
            <a href="@Url.Action("MyAppointments", "Patient")" class="stat-link">
                Voir détails <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>

        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-icon pink">
                    <span class="glyphicon glyphicon-ok-sign"></span>
                </div>
                <div class="stat-info">
                    <div class="stat-value">@(ViewBag.CompletedAppointments ?? 0)</div>
                    <div class="stat-label">Consultations terminées</div>
                </div>
            </div>
            <a href="@Url.Action("MedicalHistory", "Patient")" class="stat-link">
                Voir historique <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>

        <div class="stat-card">
            <div class="stat-card-header">
                <div class="stat-icon dark">
                    <span class="glyphicon glyphicon-exclamation-sign"></span>
                </div>
                <div class="stat-info">
                    <div class="stat-value">@(ViewBag.PendingResults ?? 0)</div>
                    <div class="stat-label">Résultats en attente</div>
                </div>
            </div>
            <a href="@Url.Action("TestResults", "Patient")" class="stat-link">
                Consulter <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Quick Actions -->
        <div class="action-tiles">
            <div class="section-title">
                <span class="glyphicon glyphicon-flash"></span>
                Actions rapides
            </div>
            <div class="tiles-grid">
                <a href="@Url.Action("BookAppointment", "Patient")" class="action-tile primary">
                    <span class="glyphicon glyphicon-plus"></span>
                    <span>Nouveau rendez-vous</span>
                </a>
                <a href="@Url.Action("EmergencyContact", "Patient")" class="action-tile danger">
                    <span class="glyphicon glyphicon-phone"></span>
                    <span>Contact d'urgence</span>
                </a>
                <a href="@Url.Action("MyPrescriptions", "Patient")" class="action-tile info">
                    <span class="glyphicon glyphicon-list"></span>
                    <span>Mes ordonnances</span>
                </a>
                <a href="@Url.Action("UpdateProfile", "Patient")" class="action-tile warning">
                    <span class="glyphicon glyphicon-user"></span>
                    <span>Mon profil</span>
                </a>
            </div>
        </div>

        <!-- Health Info Card - Purple Gradient -->
        <div class="health-info-card">
            <h3>
                <span class="glyphicon glyphicon-heart"></span>
                Informations de santé
            </h3>
            <p>Restez informé(e) de vos prochains rendez-vous et suivez votre parcours de soins.</p>
            <div class="health-details">
                <div class="health-detail">
                    <strong>Prochain RDV</strong>
                    <div class="health-detail-value">@(ViewBag.NextAppointmentDate ?? "Aucun prévu")</div>
                </div>
                <div class="health-detail">
                    <strong>Médecin traitant</strong>
                    <div class="health-detail-value">@(ViewBag.PrimaryDoctor ?? "Non défini")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="activity-section">
        <div class="section-title">
            <span class="glyphicon glyphicon-time"></span>
            Activité récente
        </div>
        @if (ViewBag.RecentActivity != null && ((IEnumerable<dynamic>)ViewBag.RecentActivity).Any())
        {
            foreach (var activity in (IEnumerable<dynamic>)ViewBag.RecentActivity)
            {
                var activityType = GetActivityProperty(activity, "Type", "ActivityType", "Title") ?? "Activité";
                var activityDescription = GetActivityProperty(activity, "Description", "Details", "Message") ?? "Description non disponible";
                var activityDate = GetActivityProperty(activity, "Date", "CreatedDate", "DateHeure") ?? string.Empty;
                
                <div class="activity-item">
                    <h5>@activityType</h5>
                    <p>@activityDescription</p>
                    <span class="activity-date">
                        <span class="glyphicon glyphicon-time"></span> @activityDate
                    </span>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <span class="glyphicon glyphicon-inbox"></span>
                <h4>Aucune activité récente</h4>
                <p>Votre historique d'activité apparaîtra ici</p>
                <a href="@Url.Action("BookAppointment", "Patient")" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus"></span> Prendre votre premier rendez-vous
                </a>
            </div>
        }
    </div>

    <!-- Health Tips - Purple Theme -->
    <div class="health-tips">
        <div class="section-title">
            <span class="glyphicon glyphicon-info-sign"></span>
            Conseils santé
        </div>
        <div class="tips-grid">
            <div class="tip-card">
                <div class="tip-icon purple">
                    <span class="glyphicon glyphicon-heart"></span>
                </div>
                <h5>Suivi régulier</h5>
                <p>Respectez vos rendez-vous de contrôle pour un suivi optimal de votre santé.</p>
            </div>
            <div class="tip-card">
                <div class="tip-icon pink">
                    <span class="glyphicon glyphicon-phone"></span>
                </div>
                <h5>Contact d'urgence</h5>
                <p>En cas d'urgence médicale, contactez immédiatement les services d'urgence.</p>
            </div>
            <div class="tip-card">
                <div class="tip-icon dark">
                    <span class="glyphicon glyphicon-list-alt"></span>
                </div>
                <h5>Ordonnances</h5>
                <p>Suivez vos prescriptions et n'hésitez pas à poser des questions à votre médecin.</p>
            </div>
        </div>
    </div>
</div>
