<div class="appointment-container">
    <!-- Header -->
    <div class="appointment-header">
        <div class="content">
            <h2>
                <span class="glyphicon glyphicon-calendar"></span>
    Nouvelle demande de rendez-vous
            </h2>
       <p>Remplissez le formulaire ci-dessous pour soumettre votre demande de consultation</p>
        </div>
    </div>

    @{
        var nom = GetPatientInfoValue(ViewBag.PatientInfo, "Nom", "LastName") ?? ViewBag.UserName;
        var prenom = GetPatientInfoValue(ViewBag.PatientInfo, "Prenom", "FirstName");
    var tel = GetPatientInfoValue(ViewBag.PatientInfo, "Telephone", "Phone") ?? "Non renseigné";
        var initials = "";
   if (!string.IsNullOrEmpty(nom) && !string.IsNullOrEmpty(prenom))
        {
            initials = nom[0].ToString().ToUpper() + prenom[0].ToString().ToUpper();
 }
        else if (!string.IsNullOrEmpty(nom))
        {
            initials = nom[0].ToString().ToUpper();
        }
    }

    <!-- Patient Info Card -->
    <div class="patient-info-card">
     <div class="patient-avatar">@initials</div>
     <div class="patient-details">
<strong>@prenom @nom</strong>
    <span>
<span class="glyphicon glyphicon-phone"></span>
          @tel
            </span>
        </div>
    </div>

    <!-- Form Card -->
    <div class="form-card">
 @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

        @using (Html.BeginForm("BookAppointment", "Patient", FormMethod.Post))
        {
          @Html.AntiForgeryToken()

    <!-- Section 1: Symptoms Description -->
     <div class="form-section-title">
          <span class="glyphicon glyphicon-list-alt"></span>
     Description des symptômes
    </div>

       <div class="form-group">
    @Html.LabelFor(m => m.SymptomsDescription, new { @class = "control-label" })
                <span class="required">*</span>
                @Html.TextAreaFor(m => m.SymptomsDescription, new
         {
 @class = "form-control",
                placeholder = "Décrivez vos symptômes en détail (douleurs, durée, intensité, etc.)",
           required = "required"
          })
 <div class="help-text">
        <span class="glyphicon glyphicon-info-sign"></span>
       Plus votre description est précise, mieux nous pourrons vous aider
       </div>
     </div>

   <!-- Section 2: Specialty & Urgency -->
       <div class="form-section-title">
  <span class="glyphicon glyphicon-heart"></span>
           Spécialité et urgence
   </div>

            <div class="row">
  <div class="col-md-6 form-group">
      @Html.LabelFor(m => m.PreferredSpecialty)
        @Html.DropDownListFor(m => m.PreferredSpecialty, 
               ViewBag.Specialties as SelectList, 
     "-- Sélectionner une spécialité --", 
           new { @class = "form-control" })
    <div class="help-text">
     <span class="glyphicon glyphicon-info-sign"></span>
       Choisissez la spécialité médicale appropriée
        </div>
       </div>

<div class="col-md-6 form-group">
           @Html.LabelFor(m => m.UrgencyLevel)
          <span class="required">*</span>
               @Html.DropDownListFor(m => m.UrgencyLevel, 
         ViewBag.Urgencies as SelectList, 
         "-- Niveau d'urgence --", 
      new { @class = "form-control", required = "required" })
         <div class="help-text">
         <span class="glyphicon glyphicon-info-sign"></span>
        Indiquez l'urgence de votre consultation
               </div>
</div>
  </div>

  <!-- Section 3: Preferred Date & Time -->
     <div class="form-section-title">
  <span class="glyphicon glyphicon-time"></span>
                Date et heure souhaitées
      </div>

 <div class="row">
          <div class="col-md-6 form-group">
         @Html.LabelFor(m => m.PreferredDate)
    <span class="required">*</span>
        @Html.TextBoxFor(m => m.PreferredDate, "{0:yyyy-MM-dd}", new 
               { 
type = "date", 
   @class = "form-control",
     required = "required",
            min = DateTime.Now.ToString("yyyy-MM-dd")
       })
    <div class="help-text">
        <span class="glyphicon glyphicon-info-sign"></span>
   Choisissez votre date préférée
       </div>
    </div>

        <div class="col-md-6 form-group">
    @Html.LabelFor(m => m.PreferredTime)
       @Html.TextBoxFor(m => m.PreferredTime, new 
            { 
        type = "time", 
       @class = "form-control"
     })
 <div class="help-text">
                 <span class="glyphicon glyphicon-info-sign"></span>
      Indiquez votre heure préférée (optionnel)
      </div>
         </div>
 </div>

     <!-- Section 4: Additional Comments -->
            <div class="form-section-title">
      <span class="glyphicon glyphicon-comment"></span>
       Commentaires additionnels
         </div>

            <div class="form-group">
 @Html.LabelFor(m => m.AdditionalComments)
     @Html.TextAreaFor(m => m.AdditionalComments, new
                {
      @class = "form-control",
  rows = 4,
          placeholder = "Informations supplémentaires, allergies, traitements en cours, etc."
         })
     <div class="help-text">
     <span class="glyphicon glyphicon-info-sign"></span>
     Partagez toute information qui pourrait être utile pour votre consultation
      </div>
  </div>

 <!-- Submit Buttons -->
<button type="submit" class="btn-submit">
        <span class="glyphicon glyphicon-send"></span>
          Soumettre la demande
            </button>

            <a href="@Url.Action("Index","Patient")" class="btn-back">
 <span class="glyphicon glyphicon-arrow-left"></span>
         Retour au tableau de bord
     </a>
      }
    </div>
</div>
