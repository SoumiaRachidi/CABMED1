@section Scripts {
<script>
    (function(){
        fetchTodayAppointments();
        fetchUpcomingAppointments();

     function formatDateFromNet(value) {
 if (!value) return '';
        var match = /Date\((\d+)\)/.exec(value);
var date = match ? new Date(parseInt(match[1], 10)) : new Date(value);
            if (isNaN(date.getTime())) return '';
            var d = ('0' + date.getDate()).slice(-2);
    var m = ('0' + (date.getMonth() + 1)).slice(-2);
    var y = date.getFullYear();
      var h = ('0' + date.getHours()).slice(-2);
            var min = ('0' + date.getMinutes()).slice(-2);
            return { date: d + '/' + m + '/' + y, time: h + ':' + min };
        }

        function getInitials(prenom, nom) {
  var initials = '';
    if (prenom) initials += prenom[0].toUpperCase();
  if (nom) initials += nom[0].toUpperCase();
 return initials || '?';
        }

        function buildActions(rendezVousId, consultationId) {
  var html = '<div class="action-buttons">';

            // View records button
   html += '<a href="@Url.Action("ViewRecords","Doctor")/' + rendezVousId + '" ' +
    'class="btn-action view" title="Voir l\'historique médical">' +
        '<span class="glyphicon glyphicon-folder-open"></span> Dossier' +
      '</a>';

          // Start consultation button
      if (!consultationId) {
    html += '<a href="@Url.Action("StartConsultation","Doctor")/' + rendezVousId + '" ' +
        'class="btn-action start">' +
            '<span class="glyphicon glyphicon-pencil"></span> Consultation' +
   '</a>';
} else {
             html += '<span class="consultation-badge">' +
         '<span class="glyphicon glyphicon-ok"></span> Consultation démarrée' +
   '</span>';
            }

    // Prescribe button
          if (consultationId) {
      html += '<a href="@Url.Action("AddPrescription","Doctor")/' + consultationId + '" ' +
'class="btn-action prescribe">' +
          '<span class="glyphicon glyphicon-list-alt"></span> Prescrire' +
    '</a>';
            } else {
         html += '<button type="button" class="btn-action prescribe" disabled="disabled" ' +
 'title="Démarrez d\'abord la consultation">' +
    '<span class="glyphicon glyphicon-list-alt"></span> Prescrire' +
      '</button>';
  }

         html += '</div>';
        return html;
        }

        function formatStatus(status) {
            var value = (status || 'En attente').toLowerCase();
    var cssClass = 'pending';
       var displayText = status || 'En attente';

if (value.indexOf('confirm') === 0 || value.indexOf('approuv') === 0) {
   cssClass = 'confirmed';
 } else if (value.indexOf('refus') === 0 || value.indexOf('annul') === 0) {
       cssClass = 'cancelled';
   }

    return '<span class="status-label ' + cssClass + '">' + displayText + '</span>';
     }

        function fetchTodayAppointments(){
            $.ajax({
url: '@Url.Action("TodayAppointments","Doctor")',
      type: 'GET',
  dataType: 'json',
              success: function(data){
           $('#appointments-loading').hide();
  $('#today-count').text(data && data.length ? data.length : 0);
           
         if (data && data.length){
        var tb = $('#appointments-tbody');
          tb.empty();
        var completedCount = 0;
           
   data.forEach(function(a){
          var info = formatDateFromNet(a.DateHeureDebut);
        var heureDebut = a.HeureDebut || (info ? info.time : '');
   var initials = getInitials(a.PatientPrenom, a.PatientNom);
      
           if (a.ConsultationId) completedCount++;
     
               var row = '<tr>'+
 '<td data-label="Heure">' +
          '<span class="time-badge">' +
      '<span class="glyphicon glyphicon-time"></span>' +
   heureDebut +
                 '</span>' +
 '</td>'+
   '<td data-label="Patient">' +
     '<div class="patient-cell">' +
       '<div class="patient-avatar">'+ initials +'</div>' +
      '<div class="patient-info">' +
       '<strong>'+ (a.PatientPrenom || '') +' '+ (a.PatientNom || '') +'</strong>' +
   '<small>ID: '+ a.RendezVousId +'</small>' +
         '</div>' +
   '</div>' +
         '</td>'+
         '<td data-label="Contact">'+ (a.PatientTelephone || '<span style="color: var(--gray-400);">N/A</span>') +'</td>'+
      '<td data-label="Motif">'+ (a.Motif || '-') +'</td>'+
       '<td data-label="Statut">'+ formatStatus(a.Statut) +'</td>'+
       '<td data-label="Actions">'+ buildActions(a.RendezVousId, a.ConsultationId) +'</td>'+
 '</tr>';
                tb.append(row);
     });
          
    $('#completed-count').text(completedCount);
          $('#appointments-container').show();
      } else {
      $('#appointments-empty').show();
  $('#completed-count').text(0);
                }
           },
       error: function(){
            $('#appointments-loading').hide();
    $('#appointments-empty').html(
   '<div class="empty-icon"><span class="glyphicon glyphicon-warning-sign" style="color: var(--danger);"></span></div>' +
                '<h3>Erreur de chargement</h3>' +
               '<p>Impossible de charger les rendez-vous</p>'
         ).show();
      }
            });
   }

    function fetchUpcomingAppointments(){
  $.ajax({
                url: '@Url.Action("UpcomingAppointments","Doctor")',
 type: 'GET',
   dataType: 'json',
         success: function(data){
          $('#upcoming-loading').hide();
   $('#upcoming-count').text(data && data.length ? data.length : 0);
          
   if (data && data.length){
 var tb = $('#upcoming-tbody');
          tb.empty();
              
 data.forEach(function(a){
          var info = formatDateFromNet(a.DateHeureDebut);
      var date = info ? info.date : '';
           var heure = a.HeureDebut || (info ? info.time : '');
           var initials = getInitials(a.PatientPrenom, a.PatientNom);
           
               var row = '<tr>'+
            '<td data-label="Date & Heure">' +
    '<div class="date-badge">'+ date +'</div>' +
                      '<span class="time-badge">' +
     '<span class="glyphicon glyphicon-time"></span>' +
    heure +
           '</span>' +
            '</td>'+
              '<td data-label="Patient">' +
    '<div class="patient-cell">' +
 '<div class="patient-avatar">'+ initials +'</div>' +
             '<div class="patient-info">' +
       '<strong>'+ (a.PatientPrenom || '') +' '+ (a.PatientNom || '') +'</strong>' +
    '<small>ID: '+ a.RendezVousId +'</small>' +
   '</div>' +
             '</div>' +
