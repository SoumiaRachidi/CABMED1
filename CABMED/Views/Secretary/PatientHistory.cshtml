@model List<CABMED.Models.Consultations>
@{
  ViewBag.Title = "Dossier Patient";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Secretary Orange Theme */
    :root {
        --secretary-primary: #ea580c;
      --secretary-primary-dark: #c2410c;
      --secretary-primary-light: #f97316;
      --secretary-accent: #fb923c;
  --success: #10b981;
      --info: #3b82f6;
    --white: #ffffff;
        --gray-50: #f8fafc;
  --gray-100: #f1f5f9;
  --gray-200: #e2e8f0;
        --gray-600: #475569;
  --gray-700: #334155;
        --gray-900: #0f172a;
       --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
   --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.15);
 }

  body {
        background: var(--gray-50);
    }

    .patient-history-container {
   max-width: 1200px;
      margin: 30px auto;
        padding: 0 20px;
    }

    /* Patient Header */
  .patient-header {
   background: linear-gradient(135deg, var(--secretary-primary) 0%, var(--secretary-primary-dark) 100%);
        color: white;
      padding: 40px;
  border-radius: 16px;
 margin-bottom: 30px;
 box-shadow: var(--shadow-xl);
        position: relative;
  overflow: hidden;
    }

    .patient-header::before {
   content: '';
        position: absolute;
    top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
   background: rgba(255, 255, 255, 0.08);
        border-radius: 50%;
    }

 .patient-header .content {
     position: relative;
      z-index: 1;
    }

 .patient-info-grid {
        display: grid;
   grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
 gap: 24px;
      margin-top: 24px;
    }

    .info-item {
        display: flex;
  align-items: center;
        gap: 12px;
    }

    .info-icon {
        width: 40px;
   height: 40px;
background: rgba(255, 255, 255, 0.2);
        border-radius: 10px;
   display: flex;
    align-items: center;
    justify-content: center;
   flex-shrink: 0;
    }

    .info-label {
        font-size: 12px;
     opacity: 0.9;
  margin-bottom: 4px;
    }

    .info-value {
        font-size: 16px;
    font-weight: 600;
    }

    /* Consultations List */
    .consultation-card {
   background: white;
  border-radius: 16px;
        padding: 30px;
        margin-bottom: 24px;
        box-shadow: var(--shadow);
        border: 1px solid var(--gray-200);
        border-left: 4px solid var(--secretary-primary);
transition: all 0.3s ease;
    }

    .consultation-card:hover {
        transform: translateY(-2px);
box-shadow: var(--shadow-lg);
    }

    .consultation-header {
        display: flex;
    justify-content: space-between;
   align-items: start;
        margin-bottom: 20px;
     padding-bottom: 20px;
border-bottom: 2px solid var(--gray-200);
  }

    .consultation-title {
        font-size: 18px;
font-weight: 700;
        color: var(--gray-900);
  margin-bottom: 8px;
    }

    .consultation-meta {
        font-size: 14px;
   color: var(--gray-600);
    }

    .consultation-badge {
    display: inline-block;
      padding: 6px 14px;
   border-radius: 20px;
  font-size: 12px;
    font-weight: 600;
        background: var(--secretary-primary);
   color: white;
    }

    .section-title {
   font-size: 14px;
   font-weight: 700;
    color: var(--gray-900);
        margin-bottom: 12px;
     text-transform: uppercase;
letter-spacing: 0.5px;
    }

 .prescription-item {
 background: var(--gray-50);
border-radius: 10px;
        padding: 16px;
        margin-bottom: 12px;
        border-left: 3px solid var(--secretary-accent);
    }

    .medication-name {
 font-weight: 700;
        color: var(--secretary-primary);
 margin-bottom: 6px;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
  padding: 80px 20px;
background: white;
        border-radius: 16px;
 box-shadow: var(--shadow);
    }

    .empty-state-icon {
   font-size: 64px;
 color: var(--gray-300);
     margin-bottom: 24px;
    }

    /* Back Button */
    .btn-back {
        background: white;
        color: var(--secretary-primary);
 border: 2px solid var(--gray-200);
      padding: 14px 32px;
        border-radius: 12px;
 font-weight: 600;
 display: inline-flex;
        align-items: center;
        gap: 10px;
  transition: all 0.3s ease;
   text-decoration: none;
    }

    .btn-back:hover {
   border-color: var(--secretary-primary);
background: rgba(234, 88, 12, 0.02);
        color: var(--secretary-primary-dark);
        transform: translateY(-2px);
 text-decoration: none;
    }

    @@media (max-width: 768px) {
        .patient-header {
   padding: 30px 20px;
     }

  .patient-info-grid {
   grid-template-columns: 1fr;
      }

  .consultation-header {
  flex-direction: column;
}
    }
</style>

<div class="patient-history-container">
    <!-- Patient Header -->
    <div class="patient-header">
 <div class="content">
    <h2 style="margin: 0 0 8px 0; font-size: 28px; font-weight: 700;">
   <span class="glyphicon glyphicon-folder-open"></span>
    Dossier Médical
         </h2>
 <p style="margin: 0; opacity: 0.9;">@ViewBag.PatientName</p>

       <div class="patient-info-grid">
    <div class="info-item">
          <div class="info-icon">
      <span class="glyphicon glyphicon-envelope"></span>
      </div>
           <div>
     <div class="info-label">Email</div>
        <div class="info-value">@(ViewBag.PatientEmail ?? "Non renseigné")</div>
   </div>
      </div>

       <div class="info-item">
      <div class="info-icon">
    <span class="glyphicon glyphicon-phone"></span>
       </div>
    <div>
       <div class="info-label">Téléphone</div>
     <div class="info-value">@(ViewBag.PatientPhone ?? "Non renseigné")</div>
       </div>
    </div>

    <div class="info-item">
      <div class="info-icon">
    <span class="glyphicon glyphicon-calendar"></span>
         </div>
    <div>
        <div class="info-label">Date de naissance</div>
   <div class="info-value">
     @if (ViewBag.PatientDateNaissance != null)
        {
         <span>@(((DateTime)ViewBag.PatientDateNaissance).ToString("dd/MM/yyyy"))</span>
  }
else
        {
         <span>Non renseigné</span>
       }
          </div>
     </div>
            </div>
          </div>
  </div>
    </div>

    <!-- Consultations List -->
    @if (Model != null && Model.Any())
    {
 <h3 style="font-size: 20px; font-weight: 700; margin-bottom: 24px; color: var(--gray-900);">
        Historique des Consultations (@Model.Count)
        </h3>

foreach (var consultation in Model)
 {
   var doctor = consultation.Users;
var appointment = consultation.RendezVous;
   var consultationDate = consultation.DateConsultation ?? appointment.DateHeureDebut;

            <div class="consultation-card">
       <div class="consultation-header">
        <div>
         <div class="consultation-title">
      Consultation du @consultationDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("fr-FR"))
      </div>
          <div class="consultation-meta">
       <span class="glyphicon glyphicon-user-md"></span>
   Dr. @((doctor.Prenom + " " + doctor.Nom).Trim())
        @if (!string.IsNullOrEmpty(doctor.Specialite))
       {
      <span> - @doctor.Specialite</span>
       }
       </div>
             </div>
   <div>
       <span class="consultation-badge">
          <span class="glyphicon glyphicon-time"></span>
     @consultationDate.ToString("HH:mm")
       </span>
  </div>
   </div>

    @if (!string.IsNullOrEmpty(consultation.Diagnostic))
      {
     <div style="margin-bottom: 20px;">
        <div class="section-title">Diagnostic</div>
<p style="margin: 0; color: var(--gray-700); line-height: 1.6;">@consultation.Diagnostic</p>
        </div>
         }

     @if (!string.IsNullOrEmpty(consultation.Notes))
          {
        <div style="margin-bottom: 20px;">
        <div class="section-title">Notes Médicales</div>
   <p style="margin: 0; color: var(--gray-700); line-height: 1.6;">@consultation.Notes</p>
      </div>
         }

        @if (consultation.Prescriptions != null && consultation.Prescriptions.Any())
            {
      <div style="margin-bottom: 20px;">
      <div class="section-title">
 <span class="glyphicon glyphicon-list-alt"></span>
       Prescriptions (@consultation.Prescriptions.Count)
         </div>

    @foreach (var prescription in consultation.Prescriptions)
       {
            <div class="prescription-item">
           <div class="medication-name">@prescription.Medicament</div>
        <div style="font-size: 14px; color: var(--gray-700);">@prescription.Posologie</div>
       </div>
    }
   </div>
          }

        @if (consultation.ResultatsExamens != null && consultation.ResultatsExamens.Any())
      {
             <div>
   <div class="section-title">
         <span class="glyphicon glyphicon-file"></span>
      Résultats d'examens (@consultation.ResultatsExamens.Count)
    </div>

   @foreach (var result in consultation.ResultatsExamens)
 {
    <div class="prescription-item" style="border-left-color: var(--info);">
          <div style="font-weight: 700; color: var(--info); margin-bottom: 6px;">@result.TypeExamen</div>
      <div style="font-size: 14px; color: var(--gray-700);">Date: @result.DateExamen.ToString("dd/MM/yyyy")</div>
          @if (!string.IsNullOrEmpty(result.CommentairesMedecin))
        {
    <div style="font-size: 14px; color: var(--gray-700); margin-top: 6px;">@result.CommentairesMedecin</div>
     }
  </div>
           }
         </div>
    }
        </div>
      }
    }
    else
    {
        <div class="empty-state">
 <div class="empty-state-icon">
              <span class="glyphicon glyphicon-folder-open"></span>
            </div>
     <h3 style="color: var(--gray-900); font-size: 24px; margin-bottom: 12px;">Aucune consultation</h3>
          <p style="color: var(--gray-600);">Ce patient n'a pas encore de consultations enregistrées.</p>
        </div>
  }

    <!-- Back Button -->
    <div class="text-center" style="margin-top: 40px;">
   <a href="@Url.Action("PatientsList", "Secretary")" class="btn-back">
     <span class="glyphicon glyphicon-arrow-left"></span>
      Retour à la liste des patients
    </a>
    </div>
</div>
