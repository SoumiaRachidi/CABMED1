@model CABMED.Models.Users
@{
    ViewBag.Title = "Détails du Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var appointments = ViewBag.Appointments as List<CABMED.Models.RendezVous>;
    var consultations = ViewBag.Consultations as List<CABMED.Models.Consultations>;
}

<style>
    /* Professional Purple Medical Theme */
    :root {
        --primary-purple: #7132CA;
        --light-purple: #C47BE4;
        --dark-purple: #301CA0;
        --pink-accent: #F29AAE;
        --white: #FFFFFF;
        --light-bg: #F7F8FC;
        --dark-text: #2C2C54;
        --light-text: #8B8BA7;
        --card-shadow: 0 4px 20px rgba(113, 50, 202, 0.12);
        --hover-shadow: 0 8px 35px rgba(113, 50, 202, 0.2);
        --gradient-primary: linear-gradient(135deg, #7132CA 0%, #C47BE4 100%);
    }

    .details-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 0 20px;
    }

    /* Header */
    .patient-header {
        background: var(--gradient-primary);
        color: white;
        padding: 45px;
        border-radius: 20px;
        margin-bottom: 35px;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

    .patient-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 350px;
        height: 350px;
        background: rgba(255, 255, 255, 0.08);
        border-radius: 50%;
    }

    .patient-avatar-large {
        width: 100px;
        height: 100px;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.25);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 36px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        margin-bottom: 20px;
        position: relative;
        z-index: 1;
    }

    .patient-header h2 {
        margin: 0 0 10px 0;
        font-size: 32px;
        font-weight: 700;
        position: relative;
        z-index: 1;
    }

    .patient-header .patient-id {
        opacity: 0.9;
        font-size: 14px;
        position: relative;
        z-index: 1;
    }

    /* Info Cards */
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        margin-bottom: 35px;
    }

    .info-card {
        background: white;
        border-radius: 18px;
        padding: 28px;
        box-shadow: var(--card-shadow);
        border: 1px solid rgba(113, 50, 202, 0.08);
        position: relative;
    }

    .info-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient-primary);
        border-radius: 18px 18px 0 0;
    }

    .section-title {
        font-size: 18px;
        font-weight: 700;
        color: var(--dark-text);
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .section-title .glyphicon {
        color: var(--primary-purple);
        font-size: 20px;
    }

    .info-item {
        margin-bottom: 16px;
    }

    .info-label {
        font-size: 12px;
        text-transform: uppercase;
        color: var(--light-text);
        font-weight: 600;
        letter-spacing: 0.5px;
        margin-bottom: 5px;
    }

    .info-value {
        color: var(--dark-text);
        font-size: 15px;
        font-weight: 500;
    }

    /* Table Styling */
    .data-table {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        border: 1px solid rgba(113, 50, 202, 0.08);
        margin-bottom: 35px;
    }

    .data-table thead {
        background: var(--gradient-primary);
        color: white;
    }

    .data-table thead th {
        border: none;
        padding: 16px;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 12px;
    }

    .data-table tbody tr {
        border-bottom: 1px solid rgba(113, 50, 202, 0.08);
        transition: all 0.3s ease;
    }

    .data-table tbody tr:hover {
        background-color: rgba(113, 50, 202, 0.03);
    }

    .data-table tbody td {
        padding: 16px;
    }

    .empty-message {
        text-align: center;
        padding: 40px;
        color: var(--light-text);
    }
</style>

<div class="details-container">
    
    <!-- Patient Header -->
    <div class="patient-header">
        @{
            var initials = "";
            if (!string.IsNullOrEmpty(Model.Prenom) && !string.IsNullOrEmpty(Model.Nom))
            {
                initials = Model.Prenom[0].ToString().ToUpper() + Model.Nom[0].ToString().ToUpper();
            }
        }
        <div class="patient-avatar-large">@initials</div>
        <h2>@Model.Prenom @Model.Nom</h2>
        <div class="patient-id">Patient ID: @Model.UserId</div>
    </div>

    <!-- Patient Information Grid -->
    <div class="info-grid">
        <!-- Personal Information -->
        <div class="info-card">
            <div class="section-title">
                <span class="glyphicon glyphicon-user"></span>
                Informations personnelles
            </div>
            <div class="info-item">
                <div class="info-label">Nom complet</div>
                <div class="info-value">@Model.Prenom @Model.Nom</div>
            </div>
            <div class="info-item">
                <div class="info-label">Email</div>
                <div class="info-value">
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <a href="mailto:@Model.Email" style="color: var(--primary-purple); text-decoration: none;">@Model.Email</a>
                    }
                    else
                    {
                        <span class="text-muted">Non renseigné</span>
                    }
                </div>
            </div>
            <div class="info-item">
                <div class="info-label">Téléphone</div>
                <div class="info-value">
                    @if (!string.IsNullOrEmpty(Model.Telephone))
                    {
                        <a href="tel:@Model.Telephone" style="color: var(--primary-purple); text-decoration: none;">@Model.Telephone</a>
                    }
                    else
                    {
                        <span class="text-muted">Non renseigné</span>
                    }
                </div>
            </div>
            <div class="info-item">
                <div class="info-label">Date de naissance</div>
                <div class="info-value">
                    @if (Model.DateNaissance.HasValue)
                    {
                        @Model.DateNaissance.Value.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("fr-FR"))
                    }
                    else
                    {
                        <span class="text-muted">Non renseignée</span>
                    }
                </div>
            </div>
        </div>

        <!-- Medical Information -->
        <div class="info-card">
            <div class="section-title">
                <span class="glyphicon glyphicon-heart-empty"></span>
                Informations médicales
            </div>
            <div class="info-item">
                <div class="info-label">Antécédents médicaux</div>
                <div class="info-value">
                    @if (!string.IsNullOrEmpty(Model.AntecedentsMedicaux))
                    {
                        var parts = Model.AntecedentsMedicaux.Split(new[] { "|||" }, StringSplitOptions.None);
                        var medicalHistory = parts.Length > 0 ? parts[0] : Model.AntecedentsMedicaux;
                        if (!string.IsNullOrEmpty(medicalHistory))
                        {
                            @medicalHistory
                        }
                        else
                        {
                            <span class="text-muted">Aucun antécédent enregistré</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Aucun antécédent enregistré</span>
                    }
                </div>
            </div>
            <div class="info-item">
                <div class="info-label">Statut du compte</div>
                <div class="info-value">
                    @if (Model.IsActive == true)
                    {
                        <span style="color: #5FCF80;">? Actif</span>
                    }
                    else
                    {
                        <span style="color: #ff6b6b;">? Inactif</span>
                    }
                </div>
            </div>
            <div class="info-item">
                <div class="info-label">Date de création du compte</div>
                <div class="info-value">
                    @if (Model.CreatedAt.HasValue)
                    {
                        @Model.CreatedAt.Value.ToString("dd/MM/yyyy")
                    }
                    else
                    {
                        <span class="text-muted">Non disponible</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Appointments -->
    <div class="data-table">
        <table class="table">
            <thead>
                <tr>
                    <th colspan="4">
                        <span class="glyphicon glyphicon-calendar"></span>
                        Rendez-vous récents
                    </th>
                </tr>
                <tr>
                    <th>Date & Heure</th>
                    <th>Médecin</th>
                    <th>Motif</th>
                    <th>Statut</th>
                </tr>
            </thead>
            <tbody>
                @if (appointments != null && appointments.Any())
                {
                    foreach (var rdv in appointments)
                    {
                        var doctor = rdv.Users1;
                        <tr>
                            <td>
                                <strong style="color: var(--primary-purple);">@rdv.DateHeureDebut.ToString("dd/MM/yyyy")</strong><br>
                                <small class="text-muted">@rdv.DateHeureDebut.ToString("HH:mm")</small>
                            </td>
                            <td>
                                @if (doctor != null)
                                {
                                    <span>Dr. @doctor.Prenom @doctor.Nom</span>
                                    if (!string.IsNullOrEmpty(doctor.Specialite))
                                    {
                                        <br><small class="text-muted">@doctor.Specialite</small>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Non assigné</span>
                                }
                            </td>
                            <td>@(rdv.Motif ?? "Consultation")</td>
                            <td>
                                <span class="label" style="background: @(rdv.Statut?.ToLower() == "confirmé" || rdv.Statut?.ToLower() == "confirme" ? "#5FCF80" : "#C47BE4"); color: white; padding: 4px 10px; border-radius: 10px; font-size: 11px;">
                                    @(rdv.Statut ?? "En attente")
                                </span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="empty-message">
                            <span class="glyphicon glyphicon-inbox" style="font-size: 40px; display: block; margin-bottom: 10px;"></span>
                            Aucun rendez-vous enregistré
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Recent Consultations -->
    <div class="data-table">
        <table class="table">
            <thead>
                <tr>
                    <th colspan="4">
                        <span class="glyphicon glyphicon-file-text"></span>
                        Consultations récentes
                    </th>
                </tr>
                <tr>
                    <th>Date</th>
                    <th>Médecin</th>
                    <th>Diagnostic</th>
                    <th>Prescriptions</th>
                </tr>
            </thead>
            <tbody>
                @if (consultations != null && consultations.Any())
                {
                    foreach (var consultation in consultations)
                    {
                        var doctor = consultation.Users;
                        <tr>
                            <td>
                                @if (consultation.DateConsultation.HasValue)
                                {
                                    <strong style="color: var(--primary-purple);">@consultation.DateConsultation.Value.ToString("dd/MM/yyyy")</strong>
                                }
                                else
                                {
                                    <span class="text-muted">Non renseignée</span>
                                }
                            </td>
                            <td>
                                @if (doctor != null)
                                {
                                    <span>Dr. @doctor.Prenom @doctor.Nom</span>
                                }
                                else
                                {
                                    <span class="text-muted">Non disponible</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(consultation.Diagnostic))
                                {
                                    @consultation.Diagnostic
                                }
                                else
                                {
                                    <span class="text-muted">Aucun diagnostic</span>
                                }
                            </td>
                            <td>
                                @if (consultation.Prescriptions != null && consultation.Prescriptions.Any())
                                {
                                    <span class="label" style="background: var(--gradient-primary); color: white; padding: 4px 10px; border-radius: 10px; font-size: 11px;">
                                        @consultation.Prescriptions.Count médicament@(consultation.Prescriptions.Count > 1 ? "s" : "")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Aucune</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="empty-message">
                            <span class="glyphicon glyphicon-inbox" style="font-size: 40px; display: block; margin-bottom: 10px;"></span>
                            Aucune consultation enregistrée
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Back Button -->
    <div class="text-center" style="margin-top: 35px;">
        <a href="@Url.Action("PatientsList", "Admin")" class="btn btn-default btn-lg" style="border-radius: 12px; padding: 13px 32px; border: 2px solid rgba(113, 50, 202, 0.15); background: white; color: #7132CA; font-weight: 600;">
            <span class="glyphicon glyphicon-arrow-left"></span>
            Retour à la liste
        </a>
    </div>

</div>
