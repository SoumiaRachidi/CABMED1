@model IEnumerable<CABMED.Models.Users>

@{
    ViewBag.Title = "Liste du Personnel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 30px;">
    <div class="row">
        <div class="col-md-12">
            <h2>
                <span class="glyphicon glyphicon-briefcase"></span> Gestion du Personnel
            </h2>
            <hr />

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Succès!</strong> @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Erreur!</strong> @TempData["ErrorMessage"]
                </div>
            }

            <!-- Add New Staff Button -->
            <div class="text-right" style="margin-bottom: 20px;">
                <a href="@Url.Action("CreateStaff", "Admin")" class="btn btn-success btn-lg">
                    <span class="glyphicon glyphicon-plus"></span> Ajouter un nouvel employé
                </a>
            </div>

            <!-- Staff Table -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-list"></span> Liste complète du personnel
                    </h3>
                </div>
                <div class="panel-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered">
                                <thead style="background-color: #f5f5f5;">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Email</th>
                                        <th>Téléphone</th>
                                        <th>Rôle</th>
                                        <th>Spécialité</th>
                                        <th style="width:220px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var staff in Model)
                                    {
                                        <tr>
                                            <td>@staff.UserId</td>
                                            <td>@staff.Nom</td>
                                            <td>@staff.Prenom</td>
                                            <td>
                                                <a href="mailto:@staff.Email">
                                                    <span class="glyphicon glyphicon-envelope"></span> @staff.Email
                                                </a>
                                            </td>
                                            <td>@(staff.Telephone ?? "N/A")</td>
                                            <td>
                                                @if (staff.Role.ToLower() == "medecin")
                                                {
                                                    <span class="label label-primary">Médecin</span>
                                                }
                                                else if (staff.Role.ToLower() == "secretaire")
                                                {
                                                    <span class="label label-success">Secrétaire</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-default">@staff.Role</span>
                                                }
                                            </td>
                                            <td>@(staff.Specialite ?? "N/A")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-info btn-sm" href="@Url.Action("CreateStaff","Admin")?id=@staff.UserId" title="Modifier le profil">
                                                        <span class="glyphicon glyphicon-pencil"></span> Modifier
                                                    </a>
                                                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteModal-@staff.UserId">
                                                        <span class="glyphicon glyphicon-trash"></span> Supprimer
                                                    </button>
                                                </div>

                                                <!-- Delete Confirmation Modal -->
                                                <div class="modal fade" id="deleteModal-@staff.UserId" tabindex="-1" role="dialog">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                <h4 class="modal-title">Confirmer la suppression</h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Êtes-vous sûr de vouloir supprimer <strong>@staff.Prenom @staff.Nom</strong> ?</p>
                                                                <p class="text-danger">Cette action désactivera le compte de cet employé.</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                                                @using (Html.BeginForm("DeleteStaff", "Admin", FormMethod.Post, new { style = "display:inline;" }))
                                                                {
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="id" value="@staff.UserId" />
                                                                    <button type="submit" class="btn btn-danger">
                                                                        <span class="glyphicon glyphicon-trash"></span> Confirmer la suppression
                                                                    </button>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="alert alert-info">
                            <span class="glyphicon glyphicon-info-sign"></span>
                            Astuce: Le bouton "Modifier" ouvre le formulaire d'ajout avec l'identifiant dans l'URL (pour futur support d'édition). Aucun changement serveur requis.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <span class="glyphicon glyphicon-info-sign"></span>
                            Aucun membre du personnel trouvé. Cliquez sur "Ajouter un nouvel employé" pour commencer.
                        </div>
                    }
                </div>
            </div>

            <!-- Back to Dashboard -->
            <div class="text-center" style="margin-top: 20px;">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left"></span> Retour au tableau de bord
                </a>
            </div>
        </div>
    </div>
</div>
