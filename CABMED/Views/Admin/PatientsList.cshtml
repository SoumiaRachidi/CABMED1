@model IEnumerable<CABMED.Models.Users>

@{
    ViewBag.Title = "Liste des Patients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 30px;">
    <div class="row">
        <div class="col-md-12">
            <h2>
                <span class="glyphicon glyphicon-heart"></span> Liste des Patients
            </h2>
            <hr />

            <!-- Patients Table -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-list"></span> Tous les patients enregistrés
                    </h3>
                </div>
                <div class="panel-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered">
                                <thead style="background-color: #f5f5f5;">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Email</th>
                                        <th>Téléphone</th>
                                        <th>Date de naissance</th>
                                        <th>Date d'inscription</th>
                                        <th style="width:120px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var patient in Model)
                                    {
                                        <tr>
                                            <td>@patient.UserId</td>
                                            <td>@patient.Nom</td>
                                            <td>@patient.Prenom</td>
                                            <td>
                                                <a href="mailto:@patient.Email">
                                                    <span class="glyphicon glyphicon-envelope"></span> @patient.Email
                                                </a>
                                            </td>
                                            <td>@(patient.Telephone ?? "N/A")</td>
                                            <td>
                                                @if (patient.DateNaissance.HasValue)
                                                {
                                                    @patient.DateNaissance.Value.ToString("dd/MM/yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (patient.CreatedAt.HasValue)
                                                {
                                                    @patient.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-info btn-sm" href="@Url.Action("PatientsList","Admin")?id=@patient.UserId" title="Modifier le profil">
                                                    <span class="glyphicon glyphicon-pencil"></span> Modifier
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="alert alert-info">
                            <span class="glyphicon glyphicon-info-sign"></span>
                            <strong>Total:</strong> @Model.Count() patient(s) enregistré(s)
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <span class="glyphicon glyphicon-info-sign"></span>
                            Aucun patient enregistré pour le moment.
                        </div>
                    }
                </div>
            </div>

            <!-- Back to Dashboard -->
            <div class="text-center" style="margin-top: 20px;">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left"></span> Retour au tableau de bord
                </a>
            </div>
        </div>
    </div>
</div>
