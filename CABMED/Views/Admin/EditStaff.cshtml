@model CABMED.ViewModels.EditStaffViewModel

@{
    ViewBag.Title = "Modifier l'employé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Unified Professional Admin Theme */
    :root {
 --admin-primary: #1e40af;
--admin-primary-dark: #1e3a8a;
        --admin-primary-light: #3b82f6;
   --admin-accent: #60a5fa;
     --admin-success: #10b981;
      --admin-warning: #f59e0b;
        --admin-danger: #ef4444;
        --white: #ffffff;
     --gray-50: #f8fafc;
        --gray-100: #f1f5f9;
        --gray-200: #e2e8f0;
        --gray-300: #cbd5e1;
        --gray-600: #475569;
    --gray-700: #334155;
        --gray-900: #0f172a;
  --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
   --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.15);
    }

    body {
        background: var(--gray-50);
    }

    .edit-staff-container {
        max-width: 900px;
        margin: 30px auto;
        padding: 0 20px;
    }

    /* Form Header */
    .form-header {
      background: linear-gradient(135deg, var(--admin-primary) 0%, var(--admin-primary-dark) 100%);
        color: white;
        padding: 40px;
 border-radius: 16px 16px 0 0;
     position: relative;
        overflow: hidden;
    }

    .form-header::before {
  content: '';
     position: absolute;
        top: -50%;
 right: -20%;
      width: 300px;
        height: 300px;
    background: rgba(255, 255, 255, 0.08);
      border-radius: 50%;
    }

    .form-header .content {
        position: relative;
        z-index: 1;
    }

    .form-header h2 {
        margin: 0 0 8px 0;
        font-size: 28px;
        font-weight: 700;
    }

    .form-header p {
   margin: 0;
        opacity: 0.9;
        font-size: 15px;
    }

    /* Form Container */
    .form-container {
      background: white;
        border-radius: 0 0 16px 16px;
        box-shadow: var(--shadow-xl);
        border: 1px solid var(--gray-200);
        border-top: none;
    }

    .form-body {
        padding: 40px;
    }

    /* Alert */
 .alert-danger-modern {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
        border: none;
 border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 12px;
        box-shadow: var(--shadow);
    }

  .alert-success-modern {
      background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
        color: #065f46;
     border: none;
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 24px;
    display: flex;
        align-items: center;
        gap: 12px;
     box-shadow: var(--shadow);
    }

    /* Fieldset */
    fieldset {
        border: 2px solid var(--gray-200);
        border-radius: 16px;
 padding: 28px;
 margin-bottom: 28px;
background: var(--gray-50);
    }

    fieldset legend {
        border: none;
        padding: 0 12px;
        font-size: 18px;
     font-weight: 700;
      color: var(--gray-900);
        width: auto;
  margin-bottom: 0;
    }

    /* Form Groups */
    .form-group {
      margin-bottom: 24px;
 }

    .form-group label {
        font-weight: 600;
        color: var(--gray-700);
        font-size: 14px;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        border: 2px solid var(--gray-200);
      border-radius: 10px;
     padding: 12px 16px;
        font-size: 15px;
        transition: all 0.3s ease;
        background: white;
  }

    .form-control:focus {
   border-color: var(--admin-primary);
        box-shadow: 0 0 0 4px rgba(30, 64, 175, 0.1);
        outline: none;
    }

    .form-control[readonly] {
        background: var(--gray-100);
        cursor: not-allowed;
}

    .input-group {
        display: flex;
    }

.input-group-addon {
        background: linear-gradient(135deg, var(--admin-primary), var(--admin-primary-light));
        color: white;
        border: none;
        padding: 12px 16px;
        border-radius: 10px 0 0 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .input-group .form-control {
        border-radius: 0 10px 10px 0;
   border-left: none;
    }

    /* Badge */
    .role-badge {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 13px;
   font-weight: 600;
        margin-top: 8px;
    }

    .role-badge.medecin {
        background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
        color: var(--admin-primary-dark);
    }

    .role-badge.secretaire {
    background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
      color: #065f46;
    }

    /* Validation */
    .text-danger {
        color: var(--admin-danger);
        font-size: 13px;
margin-top: 6px;
        display: block;
    }

    /* Action Buttons */
    .form-actions {
    border-top: 2px solid var(--gray-200);
        padding-top: 32px;
        margin-top: 32px;
        display: flex;
        gap: 12px;
     justify-content: center;
    }

    .btn-modern {
        padding: 14px 32px;
     border-radius: 12px;
        font-size: 15px;
        font-weight: 600;
  border: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: var(--shadow);
    }

    .btn-modern.success {
        background: linear-gradient(135deg, var(--admin-success), #34d399);
        color: white;
    }

    .btn-modern.success:hover {
        background: linear-gradient(135deg, #059669, var(--admin-success));
  transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }

    .btn-modern.cancel {
   background: white;
    color: var(--gray-700);
        border: 2px solid var(--gray-200);
  }

    .btn-modern.cancel:hover {
        border-color: var(--gray-300);
      background: var(--gray-50);
     transform: translateY(-2px);
    }

 /* Info Card */
  .info-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        margin-top: 24px;
     box-shadow: var(--shadow);
        border: 1px solid var(--gray-200);
    }

    .info-card .info-header {
        display: flex;
        align-items: start;
        gap: 12px;
    }

    .info-card .icon {
        color: var(--admin-primary);
        font-size: 24px;
    }

    .info-card h4 {
        margin: 0 0 8px 0;
        color: var(--gray-900);
        font-size: 16px;
    }

    .info-card p {
margin: 0;
        color: var(--gray-600);
        font-size: 14px;
        line-height: 1.6;
    }

  @@media (max-width: 768px) {
        .form-header {
   padding: 30px 20px;
    }

.form-header h2 {
  font-size: 22px;
     }

   .form-body {
    padding: 24px;
        }

        fieldset {
  padding: 20px;
  }

   .form-actions {
   flex-direction: column;
        }

     .btn-modern {
   width: 100%;
  justify-content: center;
   }
    }
</style>

<div class="edit-staff-container">
    <div class="form-container">
        <!-- Form Header -->
        <div class="form-header">
   <div class="content">
       <h2><span class="glyphicon glyphicon-edit"></span> Modifier l'employé</h2>
  <p>Mettez à jour les informations de l'employé</p>
            </div>
        </div>

<!-- Form Body -->
        <div class="form-body">
  @if (TempData["SuccessMessage"] != null)
            {
      <div class="alert-success-modern">
         <span class="glyphicon glyphicon-ok-circle" style="font-size: 20px;"></span>
       <div>
               <strong>Succès!</strong> @TempData["SuccessMessage"]
            </div>
              </div>
   }

            @if (ViewData.ModelState.Any(x => x.Value.Errors.Count > 0))
         {
    <div class="alert-danger-modern">
             <span class="glyphicon glyphicon-exclamation-sign" style="font-size: 20px;"></span>
  <div>
        <strong>Erreur!</strong> Veuillez corriger les erreurs ci-dessous.
  </div>
                </div>
 }

       @using (Html.BeginForm("EditStaff", "Admin", FormMethod.Post, new { @class = "form" }))
            {
            @Html.AntiForgeryToken()
     @Html.HiddenFor(m => m.UserId)

     <fieldset>
         <legend><span class="glyphicon glyphicon-user"></span> Informations personnelles</legend>

      <div class="row">
    <div class="col-md-6">
  <div class="form-group">
 @Html.LabelFor(m => m.Nom)
 @Html.TextBoxFor(m => m.Nom, new { @class = "form-control", placeholder = "Nom de famille" })
       @Html.ValidationMessageFor(m => m.Nom, "", new { @class = "text-danger" })
  </div>
       </div>

       <div class="col-md-6">
           <div class="form-group">
    @Html.LabelFor(m => m.Prenom)
              @Html.TextBoxFor(m => m.Prenom, new { @class = "form-control", placeholder = "Prénom" })
   @Html.ValidationMessageFor(m => m.Prenom, "", new { @class = "text-danger" })
           </div>
             </div>
    </div>

         <div class="form-group">
           @Html.LabelFor(m => m.Email)
    <div class="input-group">
        <span class="input-group-addon">
        <span class="glyphicon glyphicon-envelope"></span>
   </span>
   @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "exemple@email.com", type = "email" })
    </div>
   @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

       <div class="form-group">
          @Html.LabelFor(m => m.Telephone)
      <div class="input-group">
      <span class="input-group-addon">
 <span class="glyphicon glyphicon-phone"></span>
          </span>
     @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control", placeholder = "0612345678", type = "tel" })
        </div>
   @Html.ValidationMessageFor(m => m.Telephone, "", new { @class = "text-danger" })
          </div>
     </fieldset>

     <fieldset>
         <legend><span class="glyphicon glyphicon-briefcase"></span> Informations professionnelles</legend>

      <div class="form-group">
             <label>Rôle</label>
     @Html.HiddenFor(m => m.Role)
       <div>
    @if (Model.Role?.ToLower() == "medecin")
  {
       <span class="role-badge medecin">
  <span class="glyphicon glyphicon-plus-sign"></span> Médecin
     </span>
         }
      else if (Model.Role?.ToLower() == "secretaire")
       {
        <span class="role-badge secretaire">
   <span class="glyphicon glyphicon-briefcase"></span> Secrétaire
  </span>
  }
     else
      {
        <span class="role-badge">@Model.Role</span>
               }
         </div>
        <small style="color: var(--gray-600); margin-top: 8px; display: block;">
 <span class="glyphicon glyphicon-info-sign"></span>
            Le rôle ne peut pas être modifié après la création
       </small>
   </div>

       <div class="form-group">
          @Html.LabelFor(m => m.Specialite)
        @Html.TextBoxFor(m => m.Specialite, new { @class = "form-control", placeholder = "Ex: Cardiologue (optionnel)" })
   @Html.ValidationMessageFor(m => m.Specialite, "", new { @class = "text-danger" })
       </div>
    </fieldset>

        <div class="form-actions">
      <button type="submit" class="btn-modern success">
              <span class="glyphicon glyphicon-save"></span> Enregistrer les modifications
    </button>
  <a href="@Url.Action("StaffList", "Admin")" class="btn-modern cancel">
    <span class="glyphicon glyphicon-remove"></span> Annuler
    </a>
          </div>
 }
        </div>
    </div>

    <!-- Info Card -->
    <div class="info-card">
        <div class="info-header">
  <span class="glyphicon glyphicon-info-sign icon"></span>
            <div>
     <h4>Note importante</h4>
       <p>
 Pour modifier le mot de passe d'un employé, veuillez contacter l'administrateur système.
          Le rôle d'un employé ne peut pas être modifié une fois le compte créé.
    </p>
  </div>
        </div>
    </div>
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
